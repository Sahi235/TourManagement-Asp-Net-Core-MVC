<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Limitless/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/Limitless/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Limitless/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/Limitless/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/Limitless/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/Limitless/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/Limitless/global_assets/js/main/jquery.min.js"></script>
    <script src="~/Limitless/global_assets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/loaders/blockui.min.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/ui/slinky.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/Limitless/global_assets/js/plugins/visualization/d3/d3.min.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/visualization/d3/d3_tooltip.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/forms/styling/switchery.min.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/ui/moment/moment.min.js"></script>
    <script src="~/Limitless/global_assets/js/plugins/pickers/daterangepicker.js"></script>

    <script src="~/Limitless/assets/js/app.js"></script>
    <script src="~/Limitless/global_assets/js/demo_pages/dashboard.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/streamgraph.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/sparklines.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/lines.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/areas.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/donuts.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/bars.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/progress.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/heatmaps.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/pies.js"></script>
    <script src="~/Limitless/global_assets/js/demo_charts/pages/dashboard/light/bullets.js"></script>

    @await RenderSectionAsync("css", required: false)
    <!-- /theme JS files -->

</head>

<body>
    <form style="display: none" id="SignOutForm" asp-action="LogOut" asp-controller="Account" asp-area="@null" method="post">
    </form>
    <!-- Main navbar -->
    <div class="navbar navbar-expand-md navbar-dark">
        <div class="navbar-brand wmin-0 mr-5">
            <a asp-action="Index" asp-controller="Dashboard" asp-area="Panel" class="d-inline-block">
                <img src="~/Limitless/global_assets/images/logo_light.png" alt="">
            </a>
        </div>

        <div class="d-md-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
                <i class="icon-tree5"></i>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="navbar-mobile">

            <span class="badge bg-success-400 badge-pill ml-md-3 mr-md-auto">16 orders</span>

            <ul class="navbar-nav">
                <li class="nav-item dropdown dropdown-user">
                    <a href="#" class="navbar-nav-link d-flex align-items-center dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Limitless/global_assets/images/placeholders/placeholder.jpg" class="rounded-circle mr-2" height="34" alt="">
                        <span>Victoria</span>
                    </a>

                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" onclick="document.getElementById('SignOutForm').submit()" class="dropdown-item"><i class="icon-switch2"></i> Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- /main navbar -->
    <!-- Secondary navbar -->
    <div class="navbar navbar-expand-md navbar-light">
        <div class="text-center d-md-none w-100">
            <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-navigation">
                <i class="icon-unfold mr-2"></i>
                Navigation
            </button>
        </div>

        <div class="navbar-collapse collapse" id="navbar-navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Dashboard" asp-area="Panel" class="navbar-nav-link active">
                        <i class="icon-home4 mr-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Home" asp-area="@null" class="navbar-nav-link">
                        <i class="icon-home2 mr-2"></i>
                        Home
                    </a>
                </li>
                <partial name="_LimitlessNavbar" />

            </ul>


        </div>
    </div>
    <br />
    <!-- /secondary navbar -->
    <!-- Page header -->
    @*<div class="page-header">
            <div class="page-header-content header-elements-md-inline">
                <div class="page-title d-flex">
                    <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Home</span> - Dashboard</h4>
                    <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
                </div>

                <div class="header-elements d-none py-0 mb-3 mb-md-0">
                    <div class="breadcrumb">
                        <a href="index.html" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                        <span class="breadcrumb-item active">Dashboard</span>
                    </div>
                </div>
            </div>
        </div>
        <hr />*@
    <!-- /page header -->
    <!-- Page content -->
    <div class="page-content pt-0">

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Content area -->
            <div class="content">

                @RenderBody()

            </div>
            <!-- /content area -->

        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->



    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
